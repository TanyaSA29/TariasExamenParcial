<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TariasExamen.Views.Resumen"
             Title="Resumen"
             Padding="25">

    <ScrollView>
        <StackLayout Spacing="20">

        
            <Label x:Name="LblUsuario" FontSize="18" TextColor="Blue"/>

    
            <Label Text="RESUMEN" FontSize="22" TextColor="Green" HorizontalOptions="Center"/>

     
            <Grid RowSpacing="10" ColumnSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Nombre:" Grid.Row="0" Grid.Column="0"/>
                <Label x:Name="LblNombre" Grid.Row="0" Grid.Column="1"/>

                <Label Text="Apellido:" Grid.Row="1" Grid.Column="0"/>
                <Label x:Name="LblApellido" Grid.Row="1" Grid.Column="1"/>

                <Label Text="VA:" Grid.Row="2" Grid.Column="0"/>
                <Label x:Name="LblVA" Grid.Row="2" Grid.Column="1"/>

                <Label Text="Fecha:" Grid.Row="3" Grid.Column="0"/>
                <Label x:Name="LblFecha" Grid.Row="3" Grid.Column="1"/>

                <Label Text="Ciudad:" Grid.Row="4" Grid.Column="0"/>
                <Label x:Name="LblCiudad" Grid.Row="4" Grid.Column="1"/>

                <Label Text="Monto Inicial:" Grid.Row="5" Grid.Column="0"/>
                <Label x:Name="LblMonto" Grid.Row="5" Grid.Column="1"/>

                <Label Text="Cuota Mensual:" Grid.Row="6" Grid.Column="0"/>
                <Label x:Name="LblCuota" Grid.Row="6" Grid.Column="1"/>

                <Label Text="Pago Total:" Grid.Row="7" Grid.Column="0"/>
                <Label x:Name="LblTotal" Grid.Row="7" Grid.Column="1"/>
            </Grid>

            <!-- Botón Cerrar sesión -->
            <Button Text="Cerrar sesión" Clicked="BtnCerrarSesion_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>